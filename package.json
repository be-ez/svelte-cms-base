{
  "name": "personal",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "dev:process-images": "node scripts/process-images-standalone.cjs",
    "build": "vite build && node scripts/copy-static-assets.js",
    "build:only": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{css,scss,json,md}": "prettier --write",
    "*.{js,ts,svelte}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@directus/sdk": "^19.1.0",
    "@eslint/js": "^9.29.0",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/enhanced-img": "^0.6.0",
    "@sveltejs/kit": "^2.21.5",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/typography": "0.5.16",
    "@tailwindcss/vite": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.0.1",
    "@vitest/ui": "^3.2.3",
    "autoprefixer": "^10.4.21",
    "dotenv": "^16.5.0",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^3.9.2",
    "globals": "^16.2.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "inter-ui": "^4.1.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "mdsvex": "^0.12.6",
    "postcss": "^8.5.5",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.4.0",
    "sharp": "^0.34.2",
    "svelte": "^5.34.1",
    "svelte-check": "^4.2.1",
    "svelte-highlight": "^7.8.3",
    "svelte-preprocess-import-assets": "^1.1.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.3.5",
    "vite-imagetools": "^7.1.0",
    "vitest": "^3.2.3"
  },
  "type": "module",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "@tailwindcss/oxide"
    ]
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "rehype-highlight": "^7.0.2",
    "svelte-exmarkdown": "^5.0.1"
  }
}
